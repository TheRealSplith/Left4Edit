@model List<System.String>
<!-- Partial View for Contact editor Modal-->
@{
  Layout = null;
}
<div class="modal fade" id="contactDetail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div data-bind="with: @Model[0]" class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title" id="myModalTitle">Contact Editor</h4>
      </div>
      <div class="modal-body">
        <div data-bind="css: { 'has-error': !FirstName.isValid() }">
          <div class="input-group">
            <span class="input-group-addon">First Name</span>
            <input type="text" data-bind="value: FirstName, valueUpdate: 'afterKeyDown'" class="form-control" placeholder="First Name" />
          </div>
          <span class="help-block" data-bind="validationMessage: FirstName"></span>
        </div>
        <br />
        <div data-bind="css: { 'has-error': !LastName.isValid() }">
          <div class="input-group">
            <span class="input-group-addon">Last Name</span>
            <input type="text" data-bind="value: LastName, valueUpdate: 'afterKeyDown'" class="form-control" placeholder="LastName" />
          </div>
          <span class="help-block" data-bind="validationMessage: LastName"></span>
        </div>
        <br />
        <div data-bind="css: { 'has-error': !Email.isValid() }">
          <div class="input-group">
            <span class="input-group-addon">Email</span>
            <input type="text" data-bind="value: Email, valueUpdate: 'afterKeyDown'" class="form-control" placeholder="Email" />
          </div>
          <span class="help-block" data-bind="validationMessage: Email"></span>
        </div>
        <br />
        <div data-bind="css: { 'has-error': !Phone.isValid() }">
          <div class="input-group">
            <span class="input-group-addon">Phone</span>
            <input type="text" data-bind="value: Phone, valueUpdate: 'afterKeyDown'" class="form-control" placeholder="Phone" />
          </div>
          <span class="help-block" data-bind="validationMessage: Phone"></span>
        </div>
        <br />
        <div class="input-group">
          <span class="input-group-addon">Fax</span>
          <input type="text" data-bind="value: Fax" class="form-control" placeholder="Fax" />
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" data-bind="click: @Model[1], disable: !$data.isValid()" data-dismiss="modal" class="btn btn-primary btn-success">Save changes</button>
      </div>
    </div>
  </div>
</div>