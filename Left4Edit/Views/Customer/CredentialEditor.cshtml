<div class="modal fade" id="credentialDetail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div data-bind="with: activeCredential" class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title" id="myModalTitle">Add Customer</h4>
      </div>
      <div class="modal-body">
        <div class="form-inline">
          <div class="input-group">
            <span class="input-group-addon">Domain</span>
            <input type="text" data-bind="value: Domain" class="form-control" placeholder="Domain" />
            <span class="input-group-addon">User Name</span>
            <input type="text" data-bind="value: UserName" class="form-control" placeholder="User Name" />
          </div>
        </div>
        <br />
        <div class="input-group">
          <span class="input-group-addon">Password</span>
          <input type="text" data-bind="value: Password" class="form-control" placeholder="Password" />
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" data-bind="click: $parent.commitCredential" data-dismiss="modal" class="btn btn-primary btn-success">Save changes</button>
      </div>
    </div>
  </div>
</div>